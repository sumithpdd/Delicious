@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Delicious.Feature.Recipes
@model Delicious.Feature.Recipes.Models.FeaturedRecipes

<section id="Recipes">

  <div class="container">
    <h3 class="mb-lg-6 mb-4">@Html.Sitecore().Field(Templates.FeaturedRecipe.Fields.FeaturedRecipesTitle.ToString(), Model)</h3>
    <div class="row">
      <div class="col-lg-3">
        @Html.Sitecore().Field(Templates.FeaturedRecipe.Fields.FeaturedRecipesText.ToString(), Model)
      </div>
      <div class="col-lg-9 pl-lg-6 mt-5 mt-lg-0">
        @if (Model.FeaturedRecipe != null)
        {
          <div class="row">
            <div class="col-12 col-md-5"><img class="rounded-soft img-fluid" src="@Model.FeaturedRecipe.RecipeImageUrl" alt="@Model.FeaturedRecipe.RecipeImageAlt" /></div>
            <div class="col pl-md-0 mt-1 mt-md-0">
              <h5 class="text-uppercase text-base font-weight-extra-bold mb-0 mt-1 mt-lg-0">@Model.FeaturedRecipe.RecipeName</h5>
              <p class="fs-0 text-uppercase font-weight-extra-bold text-500 mb-1">@Model.FeaturedRecipe.RecipeTitle</p>
              <div class="col pl-0 fs-0">
                @if (!string.IsNullOrEmpty(Model.FeaturedRecipe.RecipeTwitterUrl))
                {
                  <a class="text-400" href="@Model.FeaturedRecipe.RecipeTwitterUrl" target="_blank"><span class="fab fa-twitter"></span></a>
                }

                @if (!string.IsNullOrEmpty(Model.FeaturedRecipe.RecipeLinkedInUrl))
                {
                  <a class="mx-2 text-400" href="@Model.FeaturedRecipe.RecipeLinkedInUrl" target="_blank"><span class="fab fa-linkedin-in"></span></a>
                }

                @if (!string.IsNullOrEmpty(Model.FeaturedRecipe.RecipeWebsiteUrl))
                {
                  <a class="mx-2 text-400" href="@Model.FeaturedRecipe.RecipeWebsiteUrl" target="_blank"><span class="fas fa-at"></span></a>
                }
              </div>
              <p class="mt-2 text-lowercase font-italic mb-0">@Model.FeaturedRecipe.RecipeDescription</p>
            </div>
          </div>
        }
        @if (Model.FeaturedRecipesList != null)
        {
          <div class="row">
            @foreach (var recipe in Model.FeaturedRecipesList)
            {
              <div class="col-sm-10 col-md-6 mt-5">
                <div class="row">
                  <div class="col-5"><img class="rounded-soft img-fluid" src="@recipe.RecipeImageUrl" alt="@recipe.RecipeImageAlt" /></div>
                  <div class="col pl-0">
                    <h6 class="fs-0 text-uppercase text-base font-weight-extra-bold mb-0">@recipe.RecipeName</h6>
                    <p class="fs--1 text-uppercase font-weight-extra-bold text-500 mb-1">@recipe.RecipeTitle</p>
                    <div class="col pl-0">
                      @if (!string.IsNullOrEmpty(recipe.RecipeTwitterUrl))
                      {
                        <a class="text-400" href="@recipe.RecipeTwitterUrl" target="_blank"><i class="fab fa-twitter"></i></a>
                      }

                      @if (!string.IsNullOrEmpty(recipe.RecipeLinkedInUrl))
                      {
                        <a class="text-400 mx-2" href="@recipe.RecipeLinkedInUrl" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                      }

                      @if (!string.IsNullOrEmpty(recipe.RecipeWebsiteUrl))
                      {
                        <a class="text-400" href="@recipe.RecipeWebsiteUrl" target="_blank"><i class="fas fa-at"></i></a>
                      }
                    </div>
                    <p class="mt-2 mb-0"><i>@recipe.RecipeDescription</i></p>
                  </div>
                </div>
              </div>
            }
          </div>
        }
      </div>
    </div>
  </div>
</section>